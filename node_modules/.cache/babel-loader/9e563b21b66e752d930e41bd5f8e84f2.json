{"ast":null,"code":"import Formulario from './components/Formulario.vue';\nimport Jogo from './components/Jogo.vue';\nimport './css/global.css';\nexport default {\n  name: 'App',\n  components: {\n    Formulario,\n    Jogo\n  },\n\n  data() {\n    return {\n      tela: 'inicio',\n      etapa: 'palavra',\n      palavra: '',\n      dica: '',\n      erros: 0,\n      letras: []\n    };\n  },\n\n  methods: {\n    setPalavra: function (palavra) {\n      this.palavra = palavra;\n      this.etapa = 'dica';\n    },\n    setDica: function (dica) {\n      this.dica = dica;\n      this.etapa = 'jogo';\n      this.tela = 'jogo';\n    },\n    verificarLetra: function (letra) {\n      return this.letras.find(item => item.toLowerCase() === letra.toLowerCase());\n    },\n    jogar: function (letra) {\n      this.letras.push(letra);\n      this.verificarErro(letra);\n    },\n    verificarErro: function (letra) {\n      if (this.palavra.toLowerCase().indexOf(letra.toLowerCase()) >= 0) return this.verificarAcertos();\n      this.erros++;\n      if (this.erros == 6) this.etapa = 'enforcado';\n    },\n    verificarAcertos: function () {\n      let letrasUnicas = [...new Set(this.palavra.split(''))];\n\n      if (letrasUnicas.length === this.letras.length - this.erros) {\n        this.etapa = 'ganhador';\n      }\n    },\n    jogarNovamente: function () {\n      this.palavra = '';\n      this.dica = '';\n      this.erros = 0;\n      this.letras = [];\n      this.tela = 'inicio';\n      this.etapa = 'palavra';\n    }\n  }\n};","map":{"version":3,"mappings":"AAmCA,OAAOA,UAAP,MAAuB,6BAAvB;AACA,OAAOC,IAAP,MAAiB,uBAAjB;AACA,OAAO,kBAAP;AAEA,eAAe;AACbC,MAAI,EAAE,KADO;AAEbC,YAAU,EAAC;AACTH,cADS;AAETC;AAFS,GAFE;;AAMbG,MAAI,GAAE;AACJ,WAAM;AACJC,UAAI,EAAE,QADF;AAEJC,WAAK,EAAE,SAFH;AAGJC,aAAO,EAAE,EAHL;AAIJC,UAAI,EAAE,EAJF;AAKJC,WAAK,EAAE,CALH;AAMJC,YAAM,EAAE;AANJ,KAAN;AAQD,GAfY;;AAgBbC,SAAO,EAAC;AACNC,cAAU,EAAE,UAASL,OAAT,EAAiB;AAC3B,WAAKA,OAAL,GAAeA,OAAf;AACA,WAAKD,KAAL,GAAa,MAAb;AACD,KAJK;AAKNO,WA